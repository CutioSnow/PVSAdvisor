        <!-- Expertise Rectangle -->

        <TextView
            android:id="@+id/tv_Bio_ProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Jacob Owens"
            android:textSize="24dp"
            app:layout_constraintStart_toEndOf="@+id/imgView_ProfilePic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Bio_CareerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="CEO of Chase Bank"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/imgView_ProfilePic"
            app:layout_constraintTop_toBottomOf="@+id/tv_Bio_ProfileName" />

        <ImageView
            android:id="@+id/imgView_ProfilePic"
            android:layout_width="157dp"
            android:layout_height="155dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
