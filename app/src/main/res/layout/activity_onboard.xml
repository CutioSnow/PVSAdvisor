<?xml version="1.0" encoding="utf-8"?>
<!-- Here frame layout is used so that different
	fragments of our onboarding screen can be
	changed within the same layout-->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OnboardActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearFragment_Container"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/frame_layout"
        android:layout_alignRight="@id/frame_layout"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:text="Get Started Now"
        android:backgroundTint="@color/PVS_Dark_Purple"
        android:textAllCaps="false"/>
</RelativeLayout>
