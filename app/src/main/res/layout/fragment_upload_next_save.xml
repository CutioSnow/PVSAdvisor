<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload.UploadNextSave">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_save_button"
            android:background="@drawable/upload_save_button"
            android:textSize="36sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_next_button"
            android:layout_marginStart="50dp"
            android:background="@drawable/upload_next_button"
            android:textColor="@color/white"
            android:textSize="36sp"
            />

    </LinearLayout>

</FrameLayout>