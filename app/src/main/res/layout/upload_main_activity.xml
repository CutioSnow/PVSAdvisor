<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/uploadMainFragmentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_save_button"
            android:background="@drawable/upload_save_button"
            android:textSize="36sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_next_button"
            android:layout_marginStart="50dp"
            android:background="@drawable/upload_next_button"
            android:textColor="@color/white"
            android:textSize="36sp"
            />
    </LinearLayout>

</RelativeLayout>